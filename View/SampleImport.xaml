<UserControl x:Class="WindowsVirusScanningSystem.View.SampleImport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WindowsVirusScanningSystem.ViewModel"
             xmlns:local="clr-namespace:WindowsVirusScanningSystem.View"
             mc:Ignorable="d"
             d:DesignHeight="650"
             d:DesignWidth="722">


    <UserControl.DataContext>
        <vm:SampleImportVM />
    </UserControl.DataContext>

    <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button  Style="{StaticResource BoxBtnStyle}"
                 Width="150"
                Margin="0 0 0 40"
                 Content="{Binding BtnState}"
                 Command="{Binding ImportedVirusSampleCommand}" />
        <ProgressBar  Maximum="{Binding RowCount}"
                      Height="20"
                      Width="440"
                      Value="{Binding Progress}"/>
    </StackPanel>
</UserControl>